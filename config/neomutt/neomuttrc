# source /usr/local/share/doc/mutt/samples/gpg.rc
# set pgp_default_key = "0x1234567890ABCDEF"
# set crypt_opportunistic_encrypt
# set postpone_encrypt

# vim keybinding
source ./vim-keys.rc

# solarized theme
source ./solarized-dark-256.neomuttrc

# load accounts
source ./accounts/config.rc
